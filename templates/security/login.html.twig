{% extends 'base.html.twig' %}
{% trans_default_domain "app" %}
{% block title %}Log in!
{% endblock %}
{% block header %}
	<style>
		.divmargirn {
			margin-top: 40px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="divmargirn">
		<blockquote class="blockquote text-center">
			<img src="{{ asset('images/CBM_1.png') }}" class="cbmIcon">
		</br>
	</br>
</br></blockquote><form method="post" class="mx-auto">
{% if error %}
	<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
	<div class="mb-3">
		You are logged in as
		{{ app.user.userIdentifier }},
		<a href="{{ path('app_logout') }}">Logout</a>
	</div>
{% endif %}

<div class="col-sm-3 mx-auto ">
	<blockquote class="blockquote text-center">
		<h1 class="h3 mb-3 font-weight-normal">Inicio de Sesion</h1>
	</blockquote>
	<div class="form-group">
		<label for="inputEmail">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
	</div>
	<br>
	<div class="form-group">
		<label for="inputPassword">Password</label>
		<div class="eye">
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required >
			<img src="{{ asset('images/eye.png') }}" class="iconeye" id="iconeye">
		</div>
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	<br>
	<blockquote class="blockquote text-center">
		<div class="d-flex justify-content-start">
			<label>
				<input type="checkbox" name="_remember_me">
				Remember me
			</label>

			<a class="p-2 flex-fill bd-highligh" href="">
				<h6>Forgot Password</h6>
			</a>
		</div>


	</blockquote>
	<div class="form-group">
		<div class="form-group">
			<button class=" btnSpecific" type="submit">
				<h4 class="h4login">
					Iniciar Sesion</h4>
			</button>
		</div>
	</br>
	<blockquote class="blockquote text-center">
		<div class="form-group">
			<h6>¿No tienes cuenta?<a href={{ path('app_register') }}>Clic aquí para crear una</a>
			</h6>
		</div>
	</blockquote>
</div>

<blockquote class="blockquote text-center"></blockquote></div>{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}</form></div>{% endblock %}{% block footer %}<br><br><br><br><br><br><br><br><img src="{{ asset('images/navbar.png') }}" width="100%" height="auto"><script>var eye = document.getElementById("iconeye");
var input = document.getElementById("inputPassword");
eye.addEventListener("click", function () {
if (input.type == "password") {
input.type = "text"
eye.style.opacity = 0.8

} else {
input.type = "password"
eye.style.opacity = 0.2
}
})</script>{% endblock %}
