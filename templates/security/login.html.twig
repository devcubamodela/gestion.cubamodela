{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<form method="post" class="mx-auto">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="col-sm-3 mx-auto ">
			<blockquote class="blockquote text-center">


				<h1 class="h3 mb-3 font-weight-normal">Inicio de Session</h1>
			</blockquote>
			<div class="form-group">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<br>
			<div class="form-group">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<br>
			<blockquote class="blockquote text-center">
				<div class="d-flex justify-content-start">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember me
					</label>

					<a class="p-2 flex-fill bd-highligh" href="">
						<h6>Forgot Password</h6>
					</a>
				</div>


			</blockquote>

			<blockquote class="blockquote text-center">
				<button class=" btnSpecific" type="submit">
					<h4 class="h4login">
						Iniciar Session</h4>
				</button>
			</br>
		</blockquote>
		<blockquote class="blockquote text-center">
			<h6>Aun no tienes cuenta?<a href={{ path('app_register') }}>Click aqui para crear una cuenta</a>
			</h6>
		</blockquote>
	</div>


	{#
			        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			        See https://symfony.com/doc/current/security/remember_me.html
			
			        <div class="checkbox mb-3">
			            <label>
			                <input type="checkbox" name="_remember_me"> Remember me
			            </label>
			        </div>
			    #}


</form>{% endblock %}
